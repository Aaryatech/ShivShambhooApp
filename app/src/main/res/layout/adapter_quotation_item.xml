<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginBottom="6dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_bold"
            android:padding="2dp"
            android:textColor="@color/colorBlack" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1.5"
                android:fontFamily="@font/open_sans_semi_bold"
                android:padding="2dp"
                android:textColor="@color/colorBlack"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:fontFamily="@font/open_sans_semi_bold"
                android:padding="2dp"
                android:text="Qty"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@android:drawable/editbox_background_normal"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center"
                android:hint="Qty"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvUom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="end"
                android:padding="2dp"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semi_bold"
                android:padding="2dp"
                android:text="Royalty"
                android:textSize="13sp" />


            <EditText
                android:id="@+id/edRoyalty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background_normal"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center"
                android:hint="Royalty Value"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semi_bold"
                android:gravity="end"
                android:padding="2dp"
                android:text="Trans"
                android:textSize="13sp" />


            <EditText
                android:id="@+id/edTransCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background_normal"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center"
                android:hint="Transaction Cost"
                android:editable="false"
                android:inputType="none"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semi_bold"
                android:padding="2dp"
                android:text="After Tax"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edCostAfterTax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background_normal"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:fontFamily="@font/open_sans_semi_bold"
                android:padding="2dp"
                android:text="Toll"
                android:textSize="13sp" />


            <EditText
                android:id="@+id/edTollCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background_normal"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center"
                android:hint="Toll Cost"
                android:visibility="gone"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semi_bold"
                android:gravity="end"
                android:padding="2dp"
                android:text="Other"
                android:textSize="13sp" />


            <EditText
                android:id="@+id/edOtherCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background_normal"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center"
                android:hint="Other"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="13sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semi_bold"
                android:padding="2dp"
                android:text="Taxable"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvTaxableValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="end"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semi_bold"
                android:gravity="end"
                android:padding="2dp"
                android:text="Tax"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvTaxValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="end"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="3"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="start"
                android:padding="2dp"
                android:text="Total"
                android:textColor="@color/colorBlack"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="start"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textSize="13sp" />

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>